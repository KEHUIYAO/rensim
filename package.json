{
  "name": "PuyoSimulator",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "concurrently \"node node_modules/react-native/local-cli/cli.js start --reset-cache\" \"react-native run-android --no-packager\"",
    "build": "cd android && ./gradlew assembleRelease && cd .. && react-native run-android --no-packager --variant=release",
    "web:start": "NODE_ENV=development webpack-dev-server --mode development --config web/webpack.config.js --watch",
    "web:build": "NODE_ENV=production webpack --config web/webpack.config.js --mode production",
    "test": "jest"
  },
  "dependencies": {
    "babel": "^6.23.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-module-alias": "^1.6.0",
    "babel-plugin-react-native-web": "^0.8.5",
    "babel-polyfill": "^6.26.0",
    "babel-preset-react-native-stage-0": "^1.0.1",
    "babel-preset-stage-0": "^6.24.1",
    "bugsnag-react-native": "^2.9.5",
    "i18n-js": "^3.0.10",
    "immer": "^1.3.1",
    "koa": "^2.5.1",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.10",
    "raven-for-redux": "^1.3.1",
    "react": "^16.4.1",
    "react-art": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-hotkeys": "^1.1.4",
    "react-mixin": "^4.0.0",
    "react-native": "^0.55.4",
    "react-native-i18n": "^2.0.12",
    "react-native-modal-selector": "0.0.27",
    "react-native-navigation": "^1.1.473",
    "react-native-sentry": "^0.38.1",
    "react-native-settings-list": "^1.8.0",
    "react-native-svg": "^6.4.1",
    "react-native-svg-web": "^1.0.1",
    "react-native-vector-icons": "^4.6.0",
    "react-native-version-number": "^0.3.4",
    "react-native-web": "^0.8.5",
    "react-redux": "^5.0.7",
    "react-timer-mixin": "^0.13.3",
    "realm": "^2.11.0",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.5",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.16.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.14.0",
    "webpack-dev-server": "^3.1.4"
  },
  "devDependencies": {
    "@types/jest": "^23.1.3",
    "@types/lodash": "^4.14.110",
    "@types/react": "^16.4.6",
    "@types/react-native": "^0.55.26",
    "@types/react-native-navigation": "^1.1.12",
    "@types/react-redux": "^6.0.3",
    "@types/realm": "^1.13.0",
    "@types/redux": "^3.6.0",
    "@types/redux-logger": "^3.0.6",
    "@types/redux-saga": "^0.10.5",
    "babel-jest": "^23.2.0",
    "babel-preset-react-native": "^4.0.0",
    "concurrently": "^3.6.0",
    "jest": "^23.2.0",
    "react-native-typescript-transformer": "^1.2.10",
    "react-test-renderer": "^16.4.1",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.4.2",
    "typescript": "^2.9.2",
    "webpack-cli": "^3.0.8"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
